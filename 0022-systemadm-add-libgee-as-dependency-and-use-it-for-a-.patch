---
 Makefile.am        |    1 +
 configure.ac       |    2 +-
 src/systemadm.vala |   14 ++++++++++++++
 3 files changed, 16 insertions(+), 1 deletions(-)

diff --git a/Makefile.am b/Makefile.am
index 54bccb5..4416ab7 100644
--- a/Makefile.am
+++ b/Makefile.am
@@ -1440,6 +1440,7 @@ systemadm_CFLAGS = \
